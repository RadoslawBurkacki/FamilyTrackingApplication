<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.honoursproject.radoslawburkacki.familytrackingapplication.Activitys.Family_setup">

    <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="551dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">


        <TextView
                android:text="Family Setup"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp" android:id="@+id/textView10" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

        <Button
                android:textColor="@color/colorDarkGrey"
                android:textSize="18dp"
                android:text="Join family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/joinfamily"
                android:layout_marginBottom="67dp"
                android:background="@drawable/btnregister"
                android:width="335dp"
                android:layout_above="@+id/createnewfamily" android:layout_alignLeft="@+id/createnewfamily"
                android:layout_alignStart="@+id/createnewfamily"/>


        <Button
                android:textColor="@color/colorDarkGrey"
                android:textSize="18dp"
                android:text="Create new family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="55dp" android:id="@+id/createnewfamily"
                android:width="335dp"
                android:background="@drawable/btnlogin"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

    >

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
