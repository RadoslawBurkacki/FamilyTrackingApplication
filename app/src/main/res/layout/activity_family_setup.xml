<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue1"
    tools:context="com.honoursproject.radoslawburkacki.familytrackingapplication.Family_setup">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="368dp"
        android:layout_height="551dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:text="Family Setup"
            android:textColor="@color/mywhite"
            android:textSize="36sp" />


        <Button
            android:id="@+id/joinfamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/createnewfamily"
            android:layout_alignStart="@+id/createnewfamily"
            android:layout_marginBottom="50dp"
            android:width="335dp"
            android:background="@drawable/btnlogin"
            android:text="Join family"
            android:textSize="18dp" />


        <Button
            android:id="@+id/createnewfamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:width="335dp"
            android:background="@drawable/btnlogin"
            android:text="Create new family"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/joinfamily"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:text="New user? Register for free."
            android:textColor="@color/mywhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/createnewfamily"
            android:layout_centerHorizontal="true"
            android:text="Already a user?"
            android:textColor="@color/mywhite"
            android:textSize="14dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
