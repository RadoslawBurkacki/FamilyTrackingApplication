<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.honoursproject.radoslawburkacki.familytrackingapplication.Register2">

    <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="551dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <TextView
                android:text="Create Account"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" android:layout_marginTop="47dp" android:id="@+id/title"/>


        <Button
                android:text="CREATE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:layout_marginRight="45dp" android:layout_marginEnd="45dp" android:layout_marginBottom="21dp"
                android:id="@+id/registerCreate"
                android:background="@drawable/round_corners"
                android:width="150dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fname"
                android:layout_marginTop="95dp"
                android:layout_below="@+id/title" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginLeft="26dp"
                android:layout_marginStart="42dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="50dp" android:id="@+id/lname" android:layout_below="@+id/fname"
                android:layout_alignLeft="@+id/fname" android:layout_alignStart="@+id/fname"/>
        <TextView
                android:text="Please enter your first name."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="47dp" android:id="@+id/textView6"
                android:layout_above="@+id/lname" android:layout_alignLeft="@+id/fname"
                android:layout_alignStart="@+id/fname"/>
        <TextView
                android:text="Please enter your last name."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginTop="30dp" android:layout_below="@+id/fname" android:layout_alignLeft="@+id/lname"
                android:layout_alignStart="@+id/lname"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
