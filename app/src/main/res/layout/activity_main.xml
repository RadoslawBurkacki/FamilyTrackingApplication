<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.honoursproject.radoslawburkacki.familytrackingapplication.MainActivity">

    <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="551dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent">

        <Button
                android:text="REGISTER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button" android:layout_above="@+id/textView2" android:layout_centerHorizontal="true"
                android:layout_marginBottom="106dp"
                android:background="@drawable/round_corners"
                android:width="335dp"/>


        <Button
                android:text="LOG IN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="55dp" android:id="@+id/button2"
                android:width="335dp"
                android:background="@drawable/round_corners"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

        <TextView
                android:text="New user? Register for free."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/button"
                android:layout_centerHorizontal="true" android:layout_marginBottom="49dp" android:id="@+id/textView"/>
        <TextView
                android:text="Already a user?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_above="@+id/button2"
                android:layout_centerHorizontal="true" android:id="@+id/textView2"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
