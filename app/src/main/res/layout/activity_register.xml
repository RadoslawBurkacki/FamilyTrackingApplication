<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue1"
    tools:context="com.honoursproject.radoslawburkacki.familytrackingapplication.Register">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="368dp"
            android:layout_height="551dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="47dp"
                    android:text="Create Account"
                    android:textColor="@color/mywhite"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btnnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="21dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:width="150dp"
                    android:background="@drawable/btnlogin"
                    android:text="NEXT" />

                <EditText
                    android:id="@+id/txtFamilyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title"
                    android:layout_marginLeft="42dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="95dp"
                    android:background="@drawable/edittext"
                    android:ems="9"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="3sp"
                    android:paddingLeft="3sp"
                    android:paddingTop="3sp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtFamilyName"
                    android:layout_alignStart="@+id/txtFamilyName"
                    android:layout_below="@+id/txtFamilyName"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/edittext"
                    android:ems="9"
                    android:inputType="textPassword"
                    android:paddingBottom="3sp"
                    android:paddingLeft="3sp"
                    android:paddingTop="3sp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/txtRePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtPassword"
                    android:layout_alignStart="@+id/txtPassword"
                    android:layout_below="@+id/txtPassword"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/edittext"
                    android:ems="9"
                    android:inputType="textPassword"
                    android:paddingBottom="3sp"
                    android:paddingLeft="3sp"
                    android:paddingTop="3sp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/lblemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtPassword"
                    android:layout_alignLeft="@+id/txtFamilyName"
                    android:layout_alignStart="@+id/txtFamilyName"
                    android:layout_marginBottom="39dp"
                    android:text="Enter your email."
                    android:textColor="@color/mywhite" />

                <TextView
                    android:id="@+id/lblpass1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtPassword"
                    android:layout_alignStart="@+id/txtPassword"
                    android:layout_below="@+id/txtFamilyName"
                    android:layout_marginTop="30dp"
                    android:text="Enter your password."
                    android:textColor="@color/mywhite" />

                <TextView
                    android:id="@+id/lblpass2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtRePassword"
                    android:layout_alignStart="@+id/txtRePassword"
                    android:layout_below="@+id/txtPassword"
                    android:layout_marginTop="28dp"
                    android:text="Re-enter password."
                    android:textColor="@color/mywhite" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/btnnext"
                    android:layout_alignStart="@+id/btnnext"
                    android:layout_below="@+id/txtPassword"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="Use at least 6 characters."
                    android:textColor="@color/mywhite" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_below="@+id/txtRePassword"
                    android:text="Use at least 6 characters."
                    android:textColor="@color/mywhite" />

        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
